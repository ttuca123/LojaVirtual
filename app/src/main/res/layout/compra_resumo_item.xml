<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.8"
    android:background="@color/colorLight"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:padding="2dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7.50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:text="@string/desc_product" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="81dp"
            android:layout_height="match_parent"

            android:layout_weight="0.19"
            android:gravity="center_vertical"
            android:text="Quantidade"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtDescPreco"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="0.56"
            android:paddingLeft="30dp"
            android:text="PreÃ§o"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtDescTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="0.99"
            android:text="Total"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtQtd"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="1" />

        <TextView
            android:id="@+id/txtOperacao"
            android:layout_width="46dp"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"

            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="X"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPrecoUnitario"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"

            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="@string/price_product"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtIgual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"

            android:layout_weight="0.19"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="="
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTotalParcial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"

            android:layout_weight="0.60"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>


